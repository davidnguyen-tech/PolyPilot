    // Google Gemini icon
    private const string GeminiIcon = @"<svg xmlns=""http://www.w3.org/2000/svg"" width=""14"" height=""14"" viewBox=""0 0 24 24"" fill=""none""><path d=""M12 0C12 6.627 6.627 12 0 12c6.627 0 12 5.373 12 12 0-6.627 5.373-12 12-12-6.627 0-12-5.373-12-12z"" fill=""#8b9cf7""/></svg>";

    private record ModelDisplayInfo(string DisplayName, string Icon);

    private ModelDisplayInfo GetDisplayInfo(string modelId)
    {
        string icon;
        if (modelId.StartsWith("claude", StringComparison.OrdinalIgnoreCase))
            icon = AnthropicIcon;
        else if (modelId.StartsWith("gpt", StringComparison.OrdinalIgnoreCase))
            icon = OpenAiIcon;
        else if (modelId.StartsWith("gemini", StringComparison.OrdinalIgnoreCase))
            icon = GeminiIcon;
        else
            icon = @"<svg xmlns=""http://www.w3.org/2000/svg"" width=""14"" height=""14"" viewBox=""0 0 24 24"" fill=""none""><circle cx=""12"" cy=""12"" r=""10"" stroke=""currentColor"" stroke-width=""2""/></svg>";

        // Prettify display name
        var display = modelId
            .Replace("claude-", "Claude ")
            .Replace("gpt-", "GPT-")
            .Replace("gemini-", "Gemini ");

        // Capitalize segments
        display = string.Join(' ', display.Split(' ').Select(s =>
            s.Length > 0 ? char.ToUpper(s[0]) + s[1..] : s));

        return new ModelDisplayInfo(display, icon);
    }
}
